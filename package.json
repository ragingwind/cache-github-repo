{
	"name": "cache-github-repo",
	"version": "0.2.0",
	"description": "Download files of the github repository at the local cache by managing commit tracing",
	"license": "MIT",
	"repository": "ragingwind/cache-github-repo",
	"author": {
		"name": "Jimmy Moon",
		"email": "ragingwind@gmail.com",
		"url": "ragingwind.me"
	},
	"engines": {
		"node": ">=6"
	},
	"main": "./dist",
	"scripts": {
		"precommit": "lint-staged",
		"lint": "xo",
		"test": "tsc && ava",
		"build": "tsc",
		"prepublishOnly": "rm -rf ./dist && npm run build"
	},
	"files": [
		"dist"
	],
	"keywords": [
		"cache",
		"github",
		"download",
		"cache-github-repo"
	],
	"dependencies": {
		"download": "^6.2.5",
		"fs-extra": "^4.0.1",
		"node-fetch": "^1.7.2",
		"parent-module": "^0.1.0",
		"prettier": "^1.5.3"
	},
	"devDependencies": {
		"@types/core-js": "^0.9.42",
		"@types/node": "^8.0.20",
		"ava": "^0.19.1",
		"find-cache-dir": "^1.0.0",
		"husky": "^0.14.3",
		"lint-staged": "^4.0.3",
		"typescript": "^2.4.2",
		"xo": "^0.18.2"
	},
	"xo": {
		"extends": "prettier",
		"rules": {
			"unicorn/no-process-exit": 0
		}
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"prettier --single-quote --no-semi --use-tabs --parser typescript --write",
			"git add"
		],
		"*.{js}": [
			"prettier --single-quote --no-semi --use-tabs --write",
			"git add"
		]
	}
}
